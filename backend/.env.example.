# üåê AlgoNova Environment Example
# Copy this file to `.env` and fill in actual values

# === Algorand Network Configuration ===
ALGONODE_API_KEY=your_algonode_api_key_here
ALGONODE_NETWORK=testnet
ALGONODE_BASE_URL=https://testnet-api.algonode.cloud

# === USDC ASA Configuration ===
ALGONAND_USDC_ASA_ID=10458941

# === Wallet Settings ===
SENDER_MNEMONIC=your_testnet_account_mnemonic_here
RECIPIENT_ADDRESS=your_recipient_wallet_address_here

# === FX Rate Simulation ===
FX_RATE=500          # e.g., 1 USD = 500 NGN
TRANSACTION_FEE_USD=2
CURRENCY=USDC

# === Backend API ===
BACKEND_URL=http://localhost:8000

# === Frontend Configuration ===
FRONTEND_PORT=3000

# === Metadata ===
PROJECT_NAME=AlgoNova
AUTHOR=YourName
VERSION=1.0.0
