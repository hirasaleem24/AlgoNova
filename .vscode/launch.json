{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI Backend",
      "type": "python",
      "request": "launch",
      "program": "uvicorn",
      "args": [
        "backend.main:app",
        "--reload",
        "--port",
        "8000"
      ],
      "jinja": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Run Frontend Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/server.js",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "console": "integratedTerminal"
    }
  ]
}
